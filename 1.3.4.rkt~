#lang sicp
(define (average-dump f)
  (lambda (x) (/ (+ x (f x)) 2)))
(define (fixed-point f n)
  (define tolerance 0.0001)
  (define (abs i)
    (if (> i 0) i (- i)))
  (let ((next (f n)))
    (if (< (abs (next n)) tolerance)
        next
        (fixed-point f next))))
(define (sqrt x)
  (fixed-point (average-dump (lambda (y) (/ x y))) 1.0))